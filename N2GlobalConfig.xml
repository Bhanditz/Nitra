<?xml version="1.0" encoding="utf-8"?>
<Config>
  <Properties>
    <!--<N2BinPath>$N2Path\N2.Grammar\bin\Debug</N2BinPath>-->
    <!--<N2BinPath>$N2Path\N2.Grammar\bin\$Configuration</N2BinPath>-->
    <!--<N2BinPath>$N2Path\N2.Grammar\bin\Release</N2BinPath>-->
    <!--<N2BinPath>$N2Path\N2.Grammar.Stage2\bin\Release</N2BinPath>-->
    <N2BinPath>$N2Path\N2\N2.Grammar\bin\$Configuration</N2BinPath>
    <N2SamplesBinPath>$N2Path\Grammars\Bin\$Configuration</N2SamplesBinPath>
  </Properties>

  <SpanClasses>
    <Keyword      Foreground="Blue"/>
    <Number       Foreground="Magenta"/>
    <Operator     Foreground="DarkGray"/>
    <String       Foreground="Maroon" />
    <Char         Foreground="Magenta" />
    <StringEsc    Foreground="Gray"/>
    <OpenBrace    Foreground="Gray"/>
    <CloseBrace   Foreground="Gray"/>
  </SpanClasses>

  <Languages>
    <Language Name="C#" FileExtentions=".csn" Grammar="CSharp" StartRule="CompilationUnit">
      <Module>$N2SamplesBinPath\CSharp.Grammar.dll</Module>
    </Language>
    <Language Name="JSON" FileExtentions=".json" Grammar="N2.Tests.JsonParser" StartRule="Start">
      <Module>$N2SamplesBinPath\Json.Grammar.dll</Module>
    </Language>
    <Language Name="N2" FileExtentions=".n2" Grammar="N2Syntax" StartRule="Start">
      <Module>$N2BinPath\Stage2\N2.Grammar.dll</Module>
    </Language>
  </Languages>
</Config>
  