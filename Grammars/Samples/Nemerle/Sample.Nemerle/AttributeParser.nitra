using Nitra;

syntax module AttributeParser
{
  using N2Parser;
  using Whitespaces;
  using PrettyPrint;

  alias Name          = Identifiers;

  syntax AttributeArgs    = "(" (Expression; ",")* ")";
  syntax Attribute        = Identifier AttributeArgs?;
  syntax AttributeSection = "[" (Attribute; ",")+ Comma=(",")? "]" nl;
  syntax Attributes       = AttributeSection*;
}
