language NitraCSharp
{
  span class Keyword          { ForegroundColor=Blue;          }
  span class Operator         { ForegroundColor=Olive;         }
  span class Number           { ForegroundColor=DarkCyan;      }
  span class OpenBrace        = Brace;
  span class CloseBrace       = Brace;
  span class String           { ForegroundColor=DarkRed;       }
  span class StringEx         { ForegroundColor=Maroon;        }
  span class Char             { ForegroundColor=DarkRed;       }
  span class InlineComment    = Comment;
  span class MultilineComment = Comment;
  span class Namespace        { ForegroundColor=Chocolate;     }
  span class Type             { ForegroundColor=DarkCyan;      }
  span class Member           { ForegroundColor=DarkMagenta;   }
  span class Alias            { ForegroundColor=DarkViolet;    }

  style Comment { ForegroundColor=Green; }
  style Brace   { ForegroundColor=DarkGray; }

  extension = .ncs;
  
  company = JetBrains; // TODO: Проверять, что не содержит пробелов.
  description = Nitra driven C# plugin for Visual Studio;
  authors     = Vlad Chistyakov, Stanislav Matveev;
  copyright   = Jet Brains;
  license url = http://opensource.org/licenses/BSD-3-Clause;
  // require license acceptance;

  syntax module CSharp.Main start rule CompilationUnit;
  syntax module CSharp.Linq;
}