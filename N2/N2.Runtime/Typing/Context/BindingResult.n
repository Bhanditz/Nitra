using N2.Runtime;

using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace N2.Typing
{
  [Record]
  public sealed class BindingResult
  {
    public Candidates : list[Symbol]          { get; }
    public Messages   : list[CompilerMessage] { get; }

    public AppendCandidates(newCandidates : list[Symbol]) : BindingResult
    {
      | []    => this
      | [one] => BindingResult(one :: Candidates, Messages)
      | many  => BindingResult(many + Candidates, Messages)
    }
  }
}
