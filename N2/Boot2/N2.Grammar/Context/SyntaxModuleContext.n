using N2.ProjectSystem;
using N2.Model;

using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using G = N2Syntax;

namespace N2.Typing
{
  public sealed class SyntaxModuleContext : EnteredScopeContext
  {
    private _module : ParsedSyntaxModuleSymbol;

    public this(parent : Context, name : G.Identifier)
    {
      base(parent);
      def p = this.GetParent.[EnteredNamespaceContext]();
      _module = p.Namespace.BindByHierarchy.[ParsedSyntaxModuleSymbol](name);
    }

    public override CurrentSymbols  : list[Symbol]            { get { [_module] } }

    public override ToString() : string
    {
      _module.Description + " " + _module.Name
    }
  }
}
