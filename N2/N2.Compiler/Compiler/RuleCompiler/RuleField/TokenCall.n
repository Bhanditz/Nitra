using Nemerle;
using Nemerle.Collections;
using Nemerle.Compiler.Parsetree;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using N2.Model;

namespace N2.Compiler
{
  internal partial abstract class RuleField
  {
    [Record]
    public sealed class TokenCall : RuleField
    {
      rd : RuleDefinition;

      [RecordIgnore] public SizeRef : AstStruct.SizeField { get; private set; }

      public override CalculateAstInfo() : void
      {
        when (ParentAstStruct.IsAst)
          SizeRef = AstStruct.SizeField(ParentAstStruct);
      }

      public override Compile() : void
      {
        ParseCode = MakeRuleCall(<[ $(Compiler.MakeTokenCall(rd))(curEndPos, text) ]>, SizeRef)
      }

      public override PrintContent() : string * string { ("TokenCall", $<#$(rd.Name)#>) }
    }
  }
}
