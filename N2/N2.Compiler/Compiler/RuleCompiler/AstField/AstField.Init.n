using Nemerle;
using Nemerle.Collections;
using Nemerle.Compiler.Parsetree;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using N2.Model;

namespace N2.Compiler
{
  internal partial abstract class AstField
  {
    public mutable Compiler          : RuleCompiler;
    public mutable Parent            : AstField;
    public mutable State             : int;
    public mutable Level             : int;
    public mutable ParseLabel        : int;
    public mutable RecoveryLabel     : int;

    public virtual Init(compiler : RuleCompiler, parent : AstField, level : int, allFields : List[AstField]) : void
    {
      Compiler       = compiler;
      Parent         = parent;
      Level          = level;
      State          = allFields.Count;
      ParseLabel     = compiler.MakeLabel();
      RecoveryLabel  = compiler.MakeLabel();
      allFields.Add(this);
      InitChildren(compiler, this, level + 1, allFields);
    }

    public virtual InitChildren(compiler : RuleCompiler, parent : AstField, level : int, allFields : List[AstField]) : void
    {
      _ = compiler;
      _ = parent;
      _ = level;
      _ = allFields;
    }
  }
}
