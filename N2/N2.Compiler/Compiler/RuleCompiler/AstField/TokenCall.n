using Nemerle;
using Nemerle.Collections;
using Nemerle.Compiler.Parsetree;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using N2.Model;

namespace N2.Compiler
{
  internal partial abstract class AstField
  {
    [Record]
    public sealed class TokenCall : AstField
    {
      rd : RuleDefinition;

      public override AllocateFieldOffsets(astStruct : AstStruct) : FieldOffsets
      {
        astStruct.AllocateField(Some(1), None());
      }

      public override Compile() : void
      {
        ParseCode = MakeRuleCall(<[ $(Compiler.MakeTokenCall(rd))(curEndPos, text) ]>)
      }

      public override PrintContent() : string * string { ("TokenCall", $<#$(rd.Name)#>) }
    }
  }
}
