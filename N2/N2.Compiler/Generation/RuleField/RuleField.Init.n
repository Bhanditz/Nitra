using Nemerle;
using Nemerle.Collections;
using Nemerle.Compiler.Parsetree;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using N2.Model;

namespace N2.Compiler
{
  internal partial abstract class RuleField
  {
    public mutable Compiler          : RuleParserEmitter;
    public mutable Parent            : RuleField;
    public mutable State             : int;
    public mutable Level             : int;
    public mutable ParseLabel        : PExprLabel;
    public mutable RecoveryLabel     : PExprLabel;

    public virtual Init(compiler : RuleParserEmitter, parent : RuleField, level : int, allFields : List[RuleField]) : void
    {
      Compiler       = compiler;
      Parent         = parent;
      Level          = level;
      State          = allFields.Count;
      allFields.Add(this);
      InitChildren(compiler, level + 1, allFields);
      ParseLabel     = compiler.Owner.Environment.MakeLabel($"Parse$State \"$(Print())\"");
      RecoveryLabel  = compiler.Owner.Environment.MakeLabel($"Recovery$State \"$(Print())\"");
    }

    public virtual InitChildren(compiler : RuleParserEmitter, level : int, allFields : List[RuleField]) : void
    {
      _ = compiler;
      _ = level;
      _ = allFields;
    }
  }
}
