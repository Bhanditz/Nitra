using N2.ProjectSystem;

using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using G = GrammarParser2;

namespace N2.Typing
{
  public sealed class SyntaxModuleContext : EnteredScopeContext
  {
    public Module : SyntaxModuleSymbol { get; }
    
    public this(parent : Context, name : G.Identifier)
    {
      base(parent);
      def p = this.GetParent.[EnteredNamespaceContext]();
      Module = p.Namespace.Node.Bind.[SyntaxModuleSymbol](name.Location).Value;
    }
    
    public override Bind[T](name : list[Located]) : option[T]
    {
      None()
    }
    
    _CollectContextData() : void
    {
      //def p = this.GetParent.[EnteredNamespaceContext]();
      //p
      //Parents
    }

    public override ToString() : string
    {
      Module.Description + " " + Module.Name
    }
  }
}
