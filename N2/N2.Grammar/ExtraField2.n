using Nemerle;
using Nemerle.Compiler;
using Nemerle.Compiler.Parsetree;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

using G = GrammarParser2;

namespace N2.Model
{
  [Record]
  public variant ExtraField2 : N2.Located
  {
    | Def        { Name : Identifier; Params : list[PParameter]; Type : PExpr; Body : PExpr; }
    | DefPrivate { Name : Identifier; Params : list[PParameter]; Type : PExpr; Body : PExpr; }
    | Abstract   { Name : Identifier; Params : list[PParameter]; Type : PExpr; }
    | Override   { Name : Identifier; Body : PExpr; }
    | OnError    { Name : Identifier; Body : PExpr; }

    public override ToString() : string
    {
      match (this)
      {
        | Override  (name, body) => $<#override $name = { $body };#>
        | OnError   (name, body) => $<#error $name = { $body };#>
        | Abstract  (name, parameters, type)       with (m = "",         end = ";")
        | Def       (name, parameters, type, body) with (m = "",         end = $"{ $body }")
        | DefPrivate(name, parameters, type, body) with (m = "private ", end = $"{ $body }") => $<#$m$name($parameters) : $type$end#>
      }
    }
  }
}
