class A
{
  public void Method1()
  {
    object x = 42;

    switch (x)
    {
      case int z:
        Console.WriteLine("int! " + z);
        break;
      default:
        break;
    }

    if (x is int y && y == 42)
    {
      Console.WriteLine("42!!!" + y);
    }
    else
      Console.WriteLine("42!!!" + y);  // Error: 'y' not defined.
  }
}