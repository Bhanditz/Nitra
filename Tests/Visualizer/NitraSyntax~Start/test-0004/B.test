namespace Nitra
{
  syntax module CStyleComments
  {
    using Core;

    extend token IgnoreToken
    {
      | [SpanClass(InlineComment)]    SingleLineComment = Start="//" Body=(!NewLine Any)* End=NewLine?;
      | [SpanClass(MultilineComment)] MultiLineComment  = Start="/*" Body=(!"*/" Any)*    End="*/";
    }
  }
}

