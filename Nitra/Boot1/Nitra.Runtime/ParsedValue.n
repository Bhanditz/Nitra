using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace Nitra
{
  [Record]
  public struct ParsedValue[T]
  {
    public Span : NSpan;
    public Value : T;
    
    public HasValue : bool { get { !this.Span.IsEmpty } }
    
    public override ToString() : string
    {
      if (HasValue)
        Value.ToString()
      else
        "<<No value!>>"
    }
  }
}
