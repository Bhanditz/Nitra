namespace Nitra
{
  language Language
  {
    span class Default {}
    span class Comment {}
    span class Char {}
    span class String {}
    span class Number {}
    span class Operator     regex ['+', '-', '/', '*', '^', '!', '?', ':', '<', '=', '>', '|', '&', '~', '%']+ {}
    span class OpenBrace    regex "(" | "{" | "[" {}
    span class CloseBrace   regex ")" | "}" | "]" {}
    span class Keyword      regex ['a'..'z', '_']['a'..'z', '_']+ {}
  }
}
