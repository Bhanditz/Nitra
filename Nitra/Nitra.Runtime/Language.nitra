namespace Nitra
{
  language Language
  {
    span class Comment;
    span class Char;
    span class String;
    span class Number;
    span class Operator     = ['+', '-', '/', '*', '^', '!', '?', ':', '<', '=', '>', '|', '&', '~', '%']+;
    span class OpenBrace    = "(" | "{" | "[";
    span class CloseBrace   = ")" | "}" | "]";
    span class Keyword      = ['a'..'z', '_']['a'..'z', '_']+;
  }
}
