using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Diagnostics;

namespace Nitra.ProjectSystem
{
  public class DebugCompilerMessages : CompilerMessages
  {
    public this(numberPrefix : string = null)
    {
      base(numberPrefix)
    }

    protected override ReportMessage(loc : Location, msg : string, num : int, messageType : CompilerMessageType) : void
    {
      def text = FormatMessage(loc, msg, num, messageType);
      Debug.WriteLine(text)
    }
  }
}
