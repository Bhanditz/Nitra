using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;

namespace Nitra
{
  [Flags]
  public enum OperatorInfo : byte
  {
    | None
    | Prefix  = 0x01;
    | Postfix = 0x02;
    | Infix   = 0x04;
  }
  
  [Record]
  public struct LineColumn
  {
    public Line   : int;
    public Column : int;

    public override ToString() : string { $"$Line, $Column" }
  }
}
