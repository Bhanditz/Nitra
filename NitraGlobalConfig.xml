<?xml version="1.0" encoding="utf-8"?>
<Config>
  <Properties>
    <!--<NitraBinPath>$NitraPath\N2.Grammar\bin\Debug</NitraBinPath>-->
    <!--<NitraBinPath>$NitraPath\N2.Grammar\bin\$Configuration</NitraBinPath>-->
    <!--<NitraBinPath>$NitraPath\N2.Grammar\bin\Release</NitraBinPath>-->
    <!--<NitraBinPath>$NitraPath\N2.Grammar.Stage2\bin\Release</NitraBinPath>-->
    <NitraBinPath>$NitraPath\N2\Nitra.Grammar\bin\$Configuration</NitraBinPath>
    <NitraSamplesBinPath>$NitraPath\Grammars\Bin\$Configuration</NitraSamplesBinPath>
  </Properties>

  <SpanClasses>
    <Keyword      Foreground="Blue"/>
    <Number       Foreground="Magenta"/>
    <Operator     Foreground="DarkGray"/>
    <String       Foreground="Maroon" />
    <Char         Foreground="Magenta" />
    <StringEsc    Foreground="Gray"/>
    <OpenBrace    Foreground="Gray"/>
    <CloseBrace   Foreground="Gray"/>
  </SpanClasses>

  <Languages>
    <Language Name="C#" FileExtentions=".csn" Grammar="CSharp" StartRule="CompilationUnit">
      <Module>$NitraSamplesBinPath\CSharp.Grammar.dll</Module>
    </Language>
    <Language Name="JSON" FileExtentions=".json" Grammar="Nitra.Tests.JsonParser" StartRule="Start">
      <Module>$NitraSamplesBinPath\Json.Grammar.dll</Module>
    </Language>
    <Language Name="Nitra" FileExtentions=".nitra" Grammar="N2Syntax" StartRule="Start">
      <Module>$NitraBinPath\Stage2\Nitra.Grammar.dll</Module>
    </Language>
  </Languages>
</Config>
  